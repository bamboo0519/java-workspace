<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="AccountExt">
    <resultMap id="AccountExtMap" type="AccountExtPo">
        <id column="id" property="id"/>
        <result column="account_id" property="accountId"/>
        <result column="height" property="height"/>
        <result column="weight" property="weight"/>

    </resultMap>

    <resultMap id="AccountFullMap" type="AccountFullDto">
        <result column="account_id" property="accountId"/>
        <result column="account_name" property="accountName"/>
        <result column="mobile" property="mobile"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>

        <result column="created_at" property="createdAt"/>
        <result column="updated_at" property="updatedAt"/>

        <id column="id" property="id"/>
        <result column="account_id" property="accountId"/>
        <result column="height" property="height"/>
        <result column="weight" property="weight"/>

    </resultMap>

    <sql id="tb">
        account
    </sql>

    <sql id="cols_all">
        id, account_id, height, weight
    </sql>

    <sql id="vals">
        #{id},#{accountId},#{height}, #{weight}
    </sql>


    <select id="load" parameterType="long" resultMap="AccountExtMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE id = #{id} LIMIT 1
    </select>

    <select id="loadById" parameterType="long" resultMap="AccountMap">
        SELECT
        <include refid="cols_all"/>
        FROM
        <include refid="tb"/>
        WHERE account_id = #{accountId} LIMIT 1
    </select>

    <insert id="create" parameterType="AccountExtPo">
        INSERT INTO <include refid="tb"/>
        (<include refid="cols_all"/>)
        values
        (<include refid="vals"/>)
    </insert>

    <select id="list" resultMap="AccountExtMap">
        SELECT
        *
        FROM
        <include refid="tb"/>

    </select>


</mapper>
